<StartScreen>:
    id: start_screen

    Image:
        source: 'logo.png'
        pos_hint: {'center_x': .5, 'center_y': .75}

    MDFloatLayout:
        MDLabel:
            text: 'The place you can feel your Freedom'
            halign: 'center'

    MDRaisedButton:
        text: 'Sign Up'
        pos_hint: {'center_x': .5, 'center_y': .4}
        on_release: start_screen.next_screen_buttton()


<LoginScreen>:
    id: login_screen

    MDFloatLayout:
        Carousel:
            id: slide

            MDFloatLayout:
                MDTextField:
                    hint_text: 'First Name'
                    helper_text: 'is optional'
                    helper_text_mode: 'on_focus'
                    size_hint_x: .8
                    pos_hint: {'center_x': .5, 'center_y': .48}

                MDTextField:
                    hint_text: 'Last Name'
                    helper_text: 'is optional'
                    helper_text_mode: 'on_focus'
                    size_hint_x: .8
                    pos_hint: {'center_x': .5, 'center_y': .36}

                MDRaisedButton:
                    text: 'Next'
                    size_hint: (.6, .06)
                    pos_hint: {'center_x': .5, 'center_y': .2}
                    on_release: login_screen.next_slide_button_1()


            MDFloatLayout:
                MDTextField:
                    hint_text: 'Email adress'
                    helper_text: 'is optional'
                    helper_text_mode: 'on_focus'
                    size_hint_x: .8
                    pos_hint: {'center_x': .5, 'center_y': .48}

                MDTextField:
                    hint_text: 'Username'
                    required: True
                    helper_text_mode: 'on_error'
                    helper_text: 'is required'
                    size_hint_x: .8
                    pos_hint: {'center_x': .5, 'center_y': .36}

                MDRaisedButton:
                    text: 'Next'
                    size_hint: (.6, .055)
                    pos_hint: {'center_x': .5, 'center_y': .2}
                    on_release: login_screen.next_slide_button_2()

                MDRaisedButton:
                    text: 'Previous'
                    size_hint: (.6, .055)
                    pos_hint: {'center_x': .5, 'center_y': .135}
                    on_release: login_screen.previous_slide_button_2()


            MDFloatLayout:
                MDTextField:
                    hint_text: 'Password'
                    password: True
                    required: True
                    helper_text_mode: 'on_error'
                    helper_text: 'is required'
                    size_hint_x: .8
                    pos_hint: {'center_x': .5, 'center_y': .48}

                MDTextField:
                    hint_text: 'Confirm password'
                    password: True
                    required: True
                    helper_text_mode: 'on_error'
                    helper_text: 'is required'
                    size_hint_x: .8
                    pos_hint: {'center_x': .5, 'center_y': .36}

                MDRaisedButton:
                    text: 'Join Jiyu'
                    size_hint: (.6, .055)
                    pos_hint: {'center_x': .5, 'center_y': .2}
                    on_release: login_screen.join_button()

                MDRaisedButton:
                    text: 'Previous'
                    size_hint: (.6, .055)
                    pos_hint: {'center_x': .5, 'center_y': .135}
                    on_release: login_screen.previous_slide_button_3()


        Image:
            source: 'logo.png'
            pos_hint: {'center_x': .5, 'center_y': .85}

        MDIconButton:
            id: icon_1
            icon: 'numeric-1-circle'
            pos_hint: {'center_x': .14, 'center_y': .62}
            user_font_size: '40sp'
            theme_text_color: 'Custom'

        MDProgressBar:
            id: progress_bar_1
            size_hint_x: .22
            pos_hint: {'center_x': .32, 'center_y': .62}

        MDIconButton:
            id: icon_2
            icon: 'numeric-2-circle'
            icon_color: rgba(123, 73, 0, 255)
            pos_hint: {'center_x': .5, 'center_y': .62}
            user_font_size: '40sp'
            theme_text_color: 'Custom'

        MDProgressBar:
            id: progress_bar_2
            size_hint_x: .22
            pos_hint: {'center_x': .68, 'center_y': .62}

        MDIconButton:
            id: icon_3
            icon: 'numeric-3-circle'
            pos_hint: {'center_x': .86, 'center_y': .62}
            user_font_size: '40sp'
            theme_text_color: 'Custom'


<MenuScreen>:
    MDFloatLayout:
        MDRaisedButton:
            text: 'Menu Screen'
            size_hint: (.4, .06)
            pos_hint: {'center_x': .5, 'center_y': .5}
